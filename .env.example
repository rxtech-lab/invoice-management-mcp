# Server Configuration
PORT=8080

# Database Configuration (Turso/LibSQL)
# For production: use Turso
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-turso-auth-token

# For local development: use SQLite file (leave TURSO_* empty)
# SQLITE_DB_PATH=invoice.db

# S3-Compatible Storage Configuration
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=invoice-uploads
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=us-east-1
S3_USE_PATH_STYLE=false

# MCPRouter Authentication
MCPROUTER_SERVER_URL=https://mcprouter.app
MCPROUTER_SERVER_API_KEY=your-mcprouter-api-key

# Build Configuration (for docker-compose build)
VERSION=dev
COMMIT_HASH=unknown
BUILD_TIME=unknown
